<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <!--配置初始化信息-->
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql:///testdatabase?serverTimezone=Asia/Shanghai</param-value>
    </context-param>

    <servlet>
        <servlet-name>Demo3</servlet-name>
        <servlet-class>test.context.ContextDemo3</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Demo3</servlet-name>
        <url-pattern>/tDemo3</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Demo2</servlet-name>
        <servlet-class>test.context.ContextDemo2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Demo2</servlet-name>
        <url-pattern>/tDemo2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ContextDemo1</servlet-name>
        <servlet-class>test.context.ContextDemo1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContextDemo1</servlet-name>
        <url-pattern>/tContextDemo1</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>test.servlet.TestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/tServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TestHello</servlet-name>
        <servlet-class>test.context.TestHello</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestHello</servlet-name>
        <url-pattern>/tHello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TestContext</servlet-name>
        <servlet-class>test.context.GetContext</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestContext</servlet-name>
        <url-pattern>/tContext</url-pattern>
    </servlet-mapping>
    
</web-app>