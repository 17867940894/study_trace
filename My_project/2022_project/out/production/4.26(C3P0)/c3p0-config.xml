        <!-- 初始化连接对象的数量 -->
        <property name="initialPoolSize">3</property>
        <!-- 最大连接对象的数量 -->
        <property name="maxPoolSize">5</property>
        <!-- 超时时间 -->
        <property name="checkoutTimeout">3000</property>
    </default-config>
</c3p0-config>